<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:background="@drawable/bg5"
    >
    
    <TextView android:text="Choose username to associate with 3d signature:" 
    		  android:id="@+id/saveText"
    		  android:lines="10" 
    		  android:layout_width="match_parent"
    		  android:layout_height="wrap_content"
    		  android:gravity="center">
    		  </TextView>
   	 <EditText android:id="@+id/editInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:autoText="false"
        android:maxLines="1"
        android:maxLength="30"/>
   	 <LinearLayout android:id="@+id/linearLayout1" 
   					android:layout_width="match_parent" 
   					android:layout_gravity="bottom" 
   					android:gravity="bottom" 
   					android:layout_height="wrap_content">
   	     <Button android:text="Save" android:layout_gravity="left" android:id="@+id/saveButton" 
   	     			android:layout_width="match_parent" android:layout_height="wrap_content" 
   	     			android:layout_weight="1"></Button>
   	     <Button android:text="Cancel" android:layout_gravity="right" 
   	     			android:layout_width="match_parent" android:id="@+id/cancelButton0" 
   	     			android:layout_height="wrap_content" android:layout_weight="1"></Button>
   	 </LinearLayout>
   	
</LinearLayout>
